{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@avans-keuzekompas/source"],
    "baseUrl": ".",
    "paths": {
      "@avans-keuzekompas/domain": ["libs/backend/domain/src/index.ts"],
      "@avans-keuzekompas/domain/*": ["libs/backend/domain/src/*"],
      "@avans-keuzekompas/application": ["libs/backend/application/src/index.ts"],
      "@avans-keuzekompas/application/*": ["libs/backend/application/src/*"],
      "@avans-keuzekompas/presentation": ["libs/backend/presentation/src/index.ts"],
      "@avans-keuzekompas/presentation/*": ["libs/backend/presentation/src/*"],
      "@avans-keuzekompas/infrastructure": ["libs/backend/infrastructure/src/index.ts"],
      "@avans-keuzekompas/infrastructure/*": ["libs/backend/infrastructure/src/*"],
      "@avans-keuzekompas/features": ["libs/frontend/features/src/index.ts"],
      "@avans-keuzekompas/features/*": ["libs/frontend/features/src/*"],
      "@avans-keuzekompas/ui": ["libs/frontend/ui/src/index.ts"],
      "@avans-keuzekompas/ui/*": ["libs/frontend/ui/src/*"],
      "@avans-keuzekompas/types": ["libs/shared/types/src/index.ts"],
      "@avans-keuzekompas/types/*": ["libs/shared/types/src/*"],
      "@avans-keuzekompas/utils": ["libs/shared/utils/src/index.ts"],
      "@avans-keuzekompas/utils/*": ["libs/shared/utils/src/*"]
    }
  }
}